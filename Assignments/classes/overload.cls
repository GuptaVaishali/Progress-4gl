CLASS overload:
    DEFINE PRIVATE VARIABLE viTotal AS INTEGER NO-UNDO.
    
    METHOD PUBLIC VOID addition(INPUT piNum1 AS INTEGER, INPUT piNum2 AS INTEGER):
        viTotal = piNum1 + piNum2.
        MESSAGE viTotal VIEW-AS ALERT-BOX INFORMATION BUTTONS OK TITLE "ADDITION OF TWO NUMBERS".
    END METHOD.
    METHOD PUBLIC VOID addition(INPUT piNum1 AS INTEGER,INPUT piNum2 AS INTEGER, INPUT piNum3 AS INTEGER):
        viTotal = piNum1 + piNum2 + piNum3.
        MESSAGE viTotal VIEW-AS ALERT-BOX INFORMATION BUTTONS OK TITLE "ADDITION OF THREE NUMBERS".
    END METHOD.
    
END CLASS.
